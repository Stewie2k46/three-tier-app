pipeline {
    agent any
    environment {
        DOCKER_CREDENTIALS_ID = 'jenkins-docker'
    }
    stages {
        stage('Build') {
            steps {
                sh './jenkins/build_push.sh'
            }
        }
        stage('Deploy') {
            steps {
                sh 'kubectl apply -f backend/deployment.yaml'
                sh 'kubectl apply -f frontend/deployment.yaml'
                sh 'kubectl apply -f database/deployment.yaml'
            }
        }
    }
}
