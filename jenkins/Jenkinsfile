pipeline {
    agent any
    environment {
        DOCKER_CREDENTIALS_ID = 'docker-hub-credentials'  // Docker Hub credentials ID from Jenkins credentials
    }
    stages {
        stage('Build and Push Docker Images') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                        // Navigate to Jenkins directory and execute build_push.sh
                        dir('jenkins') {
                            sh 'chmod +x build_push.sh'
                            sh './build_push.sh'
                        }
                    }
                }
            }
        }
        stage('Deploy to Minikube') {
            steps {
                script {
                    // Deploy backend
                    sh 'kubectl apply -f backend/deployment.yaml'

                    // Deploy frontend
                    sh 'kubectl apply -f frontend/deployment.yaml'

                    // Deploy database
                    sh 'kubectl apply -f database/deployment.yaml'
                }
            }
        }
    }
}
